<center>

    <div id="1"> <button id="show" type="button" class="btn btn-info btn-lg">See Vacations</button></div>

    <div id="2">
        <button id="hide" type="button" class="btn btn-info btn-lg">Hide Vacations</button>
    </div>


</center>
<table class="table" border="1" id="tabela" style="display: none">
    <tr>

        <th>
            UserId
        </th>
        <th>
            DateFrom
        </th>
        <th>
            DateTo
        </th>
        <th>
            Description
        </th>
        <th>
            IsSickLeave
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.initVacations)
    {
        <tr>

            <td>
                @(item.UserId)
            </td>
            <td>
                @(item.DateFrom)
            </td>
            <td>
                @(item.DateTo)
            </td>
            <td>
                @(item.Description)
            </td>
            <td>
                @(item.IsSickLeave)
            </td>
            <td>
                @Html.ActionLink("EditVacation", "../LoadVacations/EditVacation", new { vacationId = item.VacationPeriodId, userId = item.UserId, datum1 = item.DateFrom, datum2 = item.DateTo, opis = item.Description, isSick = item.IsSickLeave })
                @Html.ActionLink("DeleteVacation", "../LoadVacations/DeleteVacation", new { vacationId = item.VacationPeriodId })
            </td>
        </tr>
    }

</table>