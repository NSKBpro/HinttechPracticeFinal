<h2>Chat</h2>

<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendMessage" value="Send" />
    <input type="hidden" id="displayName" />
    <ul id="discussion"></ul>
</div>

    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>

        var chatWith;

        $(function () { 

            var chat = $.connection.chatHub;
            var usernameFrom = "@Context.User.Identity.Name"
      

            chat.client.addNewMessageToPage = function (name, message, recipientName) {
                $('#discussion').append('<li><strong>' + htmlEncode(name) +
                    '</strong>: ' + htmlEncode(message) + '</li>');
            };
            //$('#displayName').val(prompt('Enter your name: ', ''));
            $('#message').focus();
            $.connection.hub.start().done(function () {
                $('#sendMessage').click(function () {
                    chat.server.send(usernameFrom, $('#message').val(), chatWith);

                    $('#message').val('').focus();
                });
            });

        });

        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }

        function chatWith(username) {
            chatWith = username;
        }
    </script>
    <div class="list-group" style="position: fixed; right: 0; top: 50px; padding: 0; margin: 0; width: 250px; height: 100%; background-color: #d3d3d3; ">
        @foreach (var u in ViewBag.users)
        {
            
             <a onclick="chatWith('@u.username')" class="list-group-item">@u.firstName @u.lastName</a>
            
        }
    </div>