@model HinttechPractice.Data.Vacation
@{

    ViewBag.title = "Index";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br /><br />
    <div class="row" align="center">
    <div class="col-md-4 col-md-offset-4 bg-success">
        @Html.ValidationSummary(true)



        <div class="form-group">

            <div class="col-md-10">
                @Html.HiddenFor(model => model.UserId)
                @Html.ValidationMessageFor(model => model.UserId)
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                <input type="date" name="DateFrom" class="form-control" value="@ViewBag.Parameterdatum1" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="date" name="DateTo" class="form-control" value="@ViewBag.Parameterdatum2" />
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control text-info", @placeholder = "Description" } })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.EditorFor(model => model.IsSickLeave)
                @Html.ValidationMessageFor(model => model.IsSickLeave)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md col-md-10">
                <input type="submit" value="Save" class="btn btn-success btn-block" />
            </div>
        </div>
    </div>
        </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
