@model HinttechPractice.Data.Vacation

<br />
<br />

<div class="row" align="center">
    <div class="col-md-4 col-md-offset-4 bg-success">
        <h3>Are you sure you want to delete vacation:</h3>
        <div>
            <h5>From: @Model.DateFrom.ToString("MM.dd.yyyy")</h5>
            <h5>To: @Model.DateTo.ToString("MM.dd.yyyy")</h5>
            <h5>Description: @Model.Description</h5>
        </div>    
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
    <input type="hidden" value="@Model.VacationPeriodId" name="VacationPeriodId" />
            <div class="form-actions no-color ">
                <input type="submit" value="Delete" class="btn btn-info btn-block" />

            </div>
        }
    </div>
</div>