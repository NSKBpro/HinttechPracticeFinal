@model HotelAdvisor.Models.LoginViewModel

@{
    ViewBag.Title = "LoginPage";
    if (User.Identity.IsAuthenticated)
    {
        Response.Redirect("~/home/home");
    }
}
<hr />
<br />
<br />
<div class="row" align="center">
    <div class="col-md-4 col-md-offset-4 bg-success">
        <form class="form-signin" role="form" method="POST" action="login">
            <input type="text" class="form-control" placeholder="Username" name="UserName" maxlength="25" required autofocus>
            <input type="password" class="form-control" placeholder="Password" name="Password" maxlength="25" required>
            <br />
            <input class="btn btn-lg btn-success btn-block" type="submit" value="Login"/>
            <br /><br />
            @Html.AntiForgeryToken()
             @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger message">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @ViewBag.Error
                    <br />
                </div>
            }
        </form>

    </div>
</div>
